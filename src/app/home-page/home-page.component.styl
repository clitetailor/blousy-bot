.outer-wrapper
  width 100%
  height 100%

  padding 10px

  @keyframes fade-in
    0%
      transform translateY(30px)
      opacity 0

    100%
      transform translateY(0)
      opacity 1

  @keyframes fade-in-late
    0%
      transform translateY(30px)
      opacity 0

    20%
      transform translateY(30px)
      opacity 0

    100%
      transform translateY(0)
      opacity 1

  .content
    display flex
    flex-flow column nowrap

    width 100%
    height 100%

    justify-content center
    align-items center

    .headline
      font-family "Lato Light"
      font-size 60px

      margin-bottom 20px

      color #333

      animation fade-in 1s

    button.start
      padding 10px 15px

      font-family Lato
      font-size 18px

      color #333

      outline none
      border 2px solid #333
      border-radius 3px

      background transparent

      animation fade-in-late 1.2s

      cursor pointer

    button.start:hover
      background #333
      color white
