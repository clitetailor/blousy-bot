.checklist
  padding-left 8px

  list-style-type none

  border-left 4px solid #ddd

  .checkbox
    background transparent

    cursor pointer

button
  padding 8px 18px

  color white
  font-family Lato
  font-size 16px
  font-weight bold

  outline none

  border none
  border-radius 3px
  background lightseagreen

  cursor pointer

button:hover
  background lighten(lightseagreen, 2)
