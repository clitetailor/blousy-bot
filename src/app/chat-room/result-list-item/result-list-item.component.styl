@keyframes fill-in
  0%
    width 0px

  100%
    width attr(width)


.content
  padding 8px 30px

  color #333

  font-family Lato
  font-size 17px

  cursor pointer

  .line
    display flex

    .title
      flex 1 1 auto
      font-weight bold

    .percent
      color #888
      font-size 14px

  .progress-bar
    width 100%
    height 10px

    margin-top 8px
    margin-bottom 8px

    background #ddd
    border-radius 2px

    .progress
      height 100%
      background yellowgreen

      border-radius 2px

      animation fill-in 1s

.collapsible
  padding 8px 30px

  color #333

  font-family Lato
  font-size 17px

  overflow hidden

  &.collapse
    display none

  .list
    margin-top 0px
    margin-bottom 0px

    border-left 4px solid #ddd
